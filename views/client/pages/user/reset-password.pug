extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-success(5000)
  +alert-error(5000)
  div(class="container py-5")
    div(class="row justify-content-center")
      div(class="col-md-6 col-lg-5")
        div(class="card shadow-sm")
          div(class="card-body")
            h2(class="text-center mb-3") Nhập mật khẩu mới

            form(action="/user/password/reset" method="POST")
              div(class="mb-3")
                label(class="form-label" for="password") Mật khẩu
                input(class="form-control" type="password" name="password" id="password" placeholder="Nhập mật khẩu mới" required)
              div(class="mb-3")
                label(class="form-label" for="otp") Xác nhận mật khẩu
                input(class="form-control" type="password" name="passwordConfirm" id="passwordConfirm" placeholder="Nhập xác nhận mật khẩu" required)

              // Nút đăng ký
              button(class="btn btn-primary w-100" type="submit") Xác nhận
