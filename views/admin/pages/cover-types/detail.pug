extends ../../layouts/default
include ../../mixins/formatDateTime.pug

block styles
  link(rel="stylesheet" href="/admin/css/detail.css")

block main
  if (role.permissions.includes("cover-types_view"))
    .card.card-custom
      .card-header.card-header-custom.d-flex.justify-content-between.align-items-center
        h5.mb-0 Chi tiết loại bìa
        a.btn.btn-back.btn-sm(href=`${prefixAdmin}/cover-types`)
          i.bi.bi-arrow-left.mr-1
          span Quay lại

      .card-body
        // --- Tên loại bìa
        h2.font-weight-bold.mb-3(style="color:#1b2a49") #{record.title}

        // --- Mô tả
        if record.description
          p.text-secondary !{record.description}
        else
          p.text-muted Không có mô tả

        hr

        // --- Thông tin hệ thống
        h6.section-title Thông tin hệ thống
        .row
          .col-md-6
            p
              span.info-label Người tạo: 
              |  #{record.accountFullName || '—'}
            p
              span.info-label Ngày tạo: 
              +formatDateTime(record.createdBy.createdAt)

          if record.updatedBy.length
            - const lastUpdate = record.updatedBy.slice(-1)[0]
            .col-md-6
              p
                span.info-label Người cập nhật: 
                |  #{lastUpdate.fullName || '—'}
              p
                span.info-label Cập nhật gần nhất: 
                +formatDateTime(lastUpdate.updateAt)
