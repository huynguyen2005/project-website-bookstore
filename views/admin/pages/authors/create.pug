extends ../../layouts/default

block styles
  link(rel="stylesheet" href="/admin/css/create.css")

block main
  if (role.permissions.includes("authors_create"))
    .card
      .card-header.d-flex.justify-content-between.align-items-center
        h5.mb-0 Thêm tác giả mới

      .card-body
        form(
          action=`${prefixAdmin}/authors/create`
          method="POST"
        )

          // --- Tên tác giả ---
          .form-group
            label(for="fullName") Tên tác giả
            input#fullName.form-control(
              type="text"
              name="fullName"
              placeholder="Nhập tên tác giả"
              required
            )

          // --- Mô tả ---
          .form-group
            label(for="description") Mô tả
            textarea#description.form-control(
              name="description"
              rows="3"
              placeholder="Nhập mô tả về tác giả"
            )

          button.btn.btn-primary.mt-3(type="submit")
            | Tạo mới


