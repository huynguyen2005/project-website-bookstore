extends ../../layouts/default.pug
include ../../mixins/alert.pug

block styles
  link(rel="stylesheet" href="/client/css/password-forgot.css")

block main
  +alert-success(5000)
  +alert-error(5000)
  div(class="container py-5")
    div(class="row justify-content-center")
      div(class="col-md-6 col-lg-5")
        div(class="card shadow-sm")
          div(class="card-body")
            h2(class="text-center mb-3") Quên mật khẩu

            form(action="/user/password/forgot" method="POST")
              // Email
              div(class="mb-3")
                label(class="form-label" for="email") Email
                input(class="form-control" type="email" name="email" id="email" placeholder="Nhập email" required)

              // Nút đăng ký
              button(class="btn btn-primary w-100" type="submit") Tiếp tục
