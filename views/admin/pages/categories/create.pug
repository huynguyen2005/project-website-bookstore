extends ../../layouts/default
include ../../mixins/select-tree.pug
include ../../mixins/alert.pug

block main
  +alert-success(5000)  
  +alert-error(5000)
  div(class="card")
    div(class="card-header d-flex justify-content-between align-items-center")
      h5(class="mb-0") Thêm danh mục mới

    div(class="card-body")
      form(
        action=`${prefixAdmin}/categories/create`
        method="POST"
      )

        div(class="form-group")
          label(for="title") Tên danh mục
          input(
            id="title"
            class="form-control"
            type="text"
            name="title"
            placeholder="Nhập tên danh mục"
            required
          )

        div(class="form-group")
          label(for="description") Mô tả
          textarea(
            id="description"
            class="form-control"
            name="description"
            rows="3"
            placeholder="Nhập mô tả danh mục..."
          )

        div(class="form-group")
          label(for="parent_id") Danh mục cha
          select(
            id="parent_id"
            class="form-control"
            name="parent_id"
          )
            option(value="") -- Không có danh mục cha --
            +select-tree-create(bookCategories)

        div(class="form-group")
          label(for="position") Vị trí hiển thị
          input(
            id="position"
            class="form-control"
            type="number"
            name="position"
            min="1"
            placeholder="VD: 1"
          )

        div(class="form-group")
          label(for="status") Trạng thái
          select(
            id="status"
            class="form-control"
            name="status"
          )
            option(value="active") Hoạt động
            option(value="inactive") Ngừng hoạt động

        button(
          class="btn btn-primary"
          type="submit"
        ) Tạo mới
