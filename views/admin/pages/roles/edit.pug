extends ../../layouts/default
include ../../mixins/alert.pug

block main
  +alert-success(5000)
  +alert-error(5000)

  div(class="card")
    div(class="card-header d-flex justify-content-between align-items-center")
      h5(class="mb-0") Sửa nhóm quyền
      div(class="d-flex align-items-center gap-2")
        a(href=`${prefixAdmin}/roles` class="btn btn-outline-secondary") Quay lại danh sách
        button(type="submit" form="form-role" class="btn btn-primary")
          i(class="bi bi-check-lg mr-1")
          | Cập nhật

    div(class="card-body")
      form(id="form-role" action=`${prefixAdmin}/roles/edit/${role._id}?_method=PATCH` method="POST")
        div(class="card")
          div(class="card-header bg-light text-dark font-weight-semibold") Thông tin nhóm quyền
          div(class="card-body")
            // Nhóm quyền
            div(class="form-group")
              label Nhóm quyền *
              input(type="text" name="title" class="form-control" placeholder="Nhập tên nhóm quyền" required value=role.title)

            // Mô tả ngắn
            div(class="form-group")
              label Mô tả ngắn
              input(type="text" name="description" class="form-control" placeholder="Nhập mô tả ngắn" value=role.description)
