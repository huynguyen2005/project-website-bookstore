extends ../../layouts/default
include ../../mixins/alert.pug

block main
  if(role.permissions.includes("cover-types_create"))
    +alert-success(5000)
    +alert-error(5000)

    div(class="card")
      div(class="card-header d-flex justify-content-between align-items-center")
        h5(class="mb-0") Thêm loại bìa
        div(class="d-flex align-items-center gap-2")
          a(href=`${prefixAdmin}/cover-types` class="btn btn-outline-secondary") Quay lại danh sách
          button(type="submit" form="form-cover-type" class="btn btn-primary")
            i(class="bi bi-plus-lg mr-1")
            | Thêm mới

      div(class="card-body")
        form(id="form-cover-type" action=`${prefixAdmin}/cover-types/create` method="POST")
          div(class="card")
            div(class="card-header bg-light text-dark font-weight-semibold") Thông tin loại bìa
            div(class="card-body")

              div(class="form-group row align-items-center mb-3")
                label(class="col-sm-3 col-form-label") Tên loại bìa *
                div(class="col-sm-9")
                  input(type="text" name="title" class="form-control" placeholder="Nhập tên loại bìa" required)

              div(class="form-group row align-items-center mb-3")
                label(class="col-sm-3 col-form-label") Mô tả
                div(class="col-sm-9")
                  textarea(name="description" rows="3" class="form-control" placeholder="Nhập mô tả (nếu có)")
