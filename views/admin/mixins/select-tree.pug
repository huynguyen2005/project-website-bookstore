mixin select-tree-create(items, level = 1)
    each item in items 
        - const prefix = Array(level + 1).join('-- ');
        option(value=item.id) #{prefix}#{item.title} 
        if item.children && item.children.length > 0
            +select-tree-create(item.children, level + 1) 

mixin select-tree-edit(items, level, parentId)
    each item in items 
        - const prefix = Array(level + 1).join('-- ');
        option(
            value=item.id
            selected=(item.id===parentId)
        ) #{prefix}#{item.title} 
        if item.children && item.children.length > 0
            +select-tree-edit(item.children, level + 1, parentId) 