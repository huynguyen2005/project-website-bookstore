extends ../../layouts/default
include ../../mixins/formatDateTime.pug

block styles
  link(rel="stylesheet" href="/admin/css/detail.css")

block main
  if (role.permissions.includes("authors_view"))
    .card.card-custom
      .card-header.card-header-custom.d-flex.justify-content-between.align-items-center
        h5(class="mb-0") Chi tiết tác giả
        a(class="btn btn-back btn-sm" href=`${prefixAdmin}/authors`)
          i(class="bi bi-arrow-left mr-1")
          span Quay lại

      .card-body
        // --- Tên tác giả
        h2(class="font-weight-bold mb-3" style="color:#1b2a49") #{record.fullName}

        // --- Mô tả
        if record.description
          p(class="text-secondary") !{record.description}
        else
          p(class="text-muted") Không có mô tả

        hr

        // --- Thông tin hệ thống
        h6(class="section-title") Thông tin hệ thống
        .row
          .col-md-6
            p
              span(class="info-label") Người tạo:
              |  #{record.accountFullName || '—'}
            p
              span(class="info-label") Ngày tạo: 
              +formatDateTime(record.createdBy.createdAt)

          if record.updatedBy.length
            - const lastUpdate = record.updatedBy.slice(-1)[0]
            .col-md-6
              p
                span(class="info-label") Người cập nhật:
                |  #{lastUpdate.fullName || '—'}
              p
                span(class="info-label") Cập nhật gần nhất: 
                +formatDateTime(lastUpdate.updateAt)
