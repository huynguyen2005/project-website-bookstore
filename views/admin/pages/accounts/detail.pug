extends ../../layouts/default
include ../../mixins/formatDateTime.pug

block styles
  link(rel="stylesheet" href="/admin/css/detail.css")

block main
  if (role.permissions.includes("accounts_view"))
    .card.card-custom
      .card-header.card-header-custom.d-flex.justify-content-between.align-items-center
        h5(class="mb-0") Chi tiết tài khoản
        a(class="btn btn-back btn-sm" href=`${prefixAdmin}/accounts`)
          i(class="bi bi-arrow-left mr-1")
          span Quay lại

      .card-body
        // --- Tên tài khoản
        h2(class="font-weight-bold mb-3" style="color:#1b2a49") #{account.fullName}

        // --- Thông tin cơ bản
        h6.section-title.mt-3.mb-3 Thông tin cơ bản
        .row
          .col-md-6
            p
              span.info-label.me-2 Vai trò:
              |  #{account.roleName}
            p
              span.info-label.me-2 Email:
              |  #{account.email}
            p
              span.info-label.me-2 Số điện thoại:
              |  #{account.phone || '—'}
          .col-md-6
            p
              span.info-label.me-2 Địa chỉ: 
              |  #{account.address || '—'}
            p
              span.info-label.me-2 Ngày sinh: 
              |  #{account.birthday || '—'}
            p
              span.info-label.me-2 Trạng thái: 
              if account.status === 'active'
                span.badge.badge-success.ms-1 Hoạt động
              else
                span.badge.badge-danger.ms-1 Ngừng hoạt động

        hr

        // --- Thông tin tạo & cập nhật
        h6.section-title.mt-3.mb-3 Thông tin hệ thống
        .row
          .col-md-6
            p
              span.info-label Người tạo: 
              |  #{account.accountFullName}
            p
              span.info-label Ngày tạo: 
              +formatDateTime(account.createdBy.createdAt)
          if account.updatedBy.length
            .col-md-6
              - const updatedBy = account.updatedBy.slice(-1)[0];
                p
                  span.info-label Cập nhật gần nhất:
                  |  #{updatedBy.fullName}
                p
                  span.info-label Ngày cập nhật:
                  +formatDateTime(updatedBy.updatedAt)


