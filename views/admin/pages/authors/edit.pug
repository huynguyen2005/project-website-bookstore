extends ../../layouts/default

block styles
  link(rel="stylesheet", href="/admin/css/edit.css")

block main
  if (role.permissions.includes("authors_edit"))
    .card
      .card-header.d-flex.justify-content-between.align-items-center
        h5.mb-0 Chỉnh sửa tác giả

      .card-body
        form(
          action=`${prefixAdmin}/authors/edit/${record._id}?_method=PATCH`
          method="POST"
        )

          // --- Tên tác giả ---
          .form-group
            label(for="fullName") Tên tác giả
            input#fullName.form-control(
              type="text"
              name="fullName"
              placeholder="Nhập tên tác giả"
              required
              value=record.fullName
            )

          // --- Mô tả ---
          .form-group
            label(for="description") Mô tả
            textarea#description.form-control(
              name="description"
              rows="3"
              placeholder="Nhập mô tả về tác giả"
            )= record.description

          button.btn.btn-primary.mt-3(type="submit") Cập nhật

