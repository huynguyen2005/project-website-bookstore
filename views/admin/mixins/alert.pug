//- alert thành công
mixin alert-success(time=2000)
  - if (messages.success)
    .message.info
      div.alert.alert-success(
        show-alert
        data-timeout=time
      )
        span.alert-text #{messages.success}
        a(class="alert-close") ×

//- alert lỗi
mixin alert-error(time=2000)
  - if (messages.error)
    .message.info
      div.alert.alert-danger(
        show-alert
        data-timeout=time
      )
        span.alert-text #{messages.error}
        a(class="alert-close") ×
