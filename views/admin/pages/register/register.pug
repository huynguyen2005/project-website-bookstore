doctype html
html
  head
    title Đăng ký
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="/admin/css/login.css")
  body
    .login-card
      h5.text-center.mb-4.font-weight-bold ĐĂNG KÝ

      if error
        .alert.alert-danger.text-center #{error}

      form(action="/admin/auth/register" method="POST")
        .form-group
          label Họ *
          input.form-control(type="text" name="lastname" placeholder="Họ" required)

        .form-group
          label Tên *
          input.form-control(type="text" name="firstname" placeholder="Tên" required)

        .form-group
          label Email *
          input.form-control(type="email" name="email" placeholder="Email" required)

        .form-group
          label Mật khẩu *
          input.form-control(type="password" name="password" placeholder="Mật khẩu" required)

        button.btn.btn-login.btn-block.mt-3(type="submit") Đăng ký

        .d-flex.justify-content-between.mt-3
          a.text-dark(href="/admin/auth/login") Quay lại đăng nhập
