extends ../../layouts/default

block styles
  link(rel="stylesheet", href="/admin/css/edit.css")

block main
  if(role.permissions.includes("roles_edit"))
    .card
      .card-header.d-flex.justify-content-between.align-items-center
        h5.mb-0 Chỉnh sửa nhóm quyền

      .card-body
        form(
          id="form-role"
          action=`${prefixAdmin}/roles/edit/${record._id}?_method=PATCH`
          method="POST"
        )

          // --- Tên nhóm quyền ---
          .form-group
            label(for="title") Tên nhóm quyền
            input#title.form-control(
              type="text"
              name="title"
              placeholder="Nhập tên nhóm quyền"
              required
              value=record.title
            )

          // --- Mô tả ngắn ---
          .form-group
            label(for="description") Mô tả ngắn
            input#description.form-control(
              type="text"
              name="description"
              placeholder="Nhập mô tả ngắn về nhóm quyền..."
              value=record.description
            )

          button.btn.btn-primary.mt-3(type="submit") Cập nhật
